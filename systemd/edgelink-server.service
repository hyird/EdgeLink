[Unit]
Description=EdgeLink Relay Server
Documentation=https://github.com/anthropic/edgelink
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/edgelink-server -c /etc/edgelink/server.json
Restart=always
RestartSec=5
LimitNOFILE=65535

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=edgelink-server

[Install]
WantedBy=multi-user.target
