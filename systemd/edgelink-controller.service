[Unit]
Description=EdgeLink Controller
Documentation=https://github.com/anthropic/edgelink
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/edgelink-controller -c /etc/edgelink/controller.json
Restart=always
RestartSec=5
LimitNOFILE=65535

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=edgelink-controller

[Install]
WantedBy=multi-user.target
