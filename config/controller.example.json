{
    "http": {
        "listen_address": "0.0.0.0",
        "listen_port": 8080,
        "enable_tls": false,
        "tls_cert_file": "",
        "tls_key_file": ""
    },
    "wss": {
        "listen_address": "0.0.0.0",
        "listen_port": 8443,
        "enable_tls": true,
        "tls_cert_file": "/etc/edgelink/cert.pem",
        "tls_key_file": "/etc/edgelink/key.pem"
    },
    "database": {
        "type": "sqlite",
        "path": "/var/lib/edgelink/edgelink.db"
    },
    "jwt": {
        "secret": "CHANGE_THIS_SECRET_IN_PRODUCTION_USE_32_CHARS_MIN",
        "algorithm": "HS256",
        "auth_expiry_seconds": 86400,
        "relay_expiry_seconds": 5400
    },
    "security": {
        "key_rotation_days": 90,
        "require_authorization": true
    },
    "builtin": {
        "enable_relay": false,
        "enable_stun": false,
        "relay_port": 8444,
        "stun_port": 3478
    }
}
