{
    "http": {
        "address": "0.0.0.0",
        "port": 8080,
        "enable_tls": false
    },
    "tls": {
        "cert": "/etc/edgelink/cert.pem",
        "key": "/etc/edgelink/key.pem"
    },
    "database": {
        "type": "sqlite",
        "path": "edgelink.db"
    },
    "jwt": {
        "secret": "CHANGE_THIS_SECRET_IN_PRODUCTION_USE_32_CHARS_MIN",
        "algorithm": "HS256"
    },
    "tokens": {
        "auth_expire_hours": 24,
        "relay_expire_hours": 1.5
    },
    "security": {
        "node_key_rotate_hours": 24,
        "require_authorization": true,
        "server_token": "CHANGE_THIS_TO_A_RANDOM_TOKEN_FOR_RELAY_SERVERS"
    },
    "builtin_relay": {
        "enabled": true,
        "external_url": ""
    },
    "builtin_stun": {
        "enabled": true,
        "listen": "0.0.0.0:3478",
        "external_ip": "YOUR_PUBLIC_IP_HERE",
        "secondary_ip": ""
    }
}
