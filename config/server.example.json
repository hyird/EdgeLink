{
    "name": "relay-server-1",
    "controller": {
        "url": "wss://controller.example.com:443",
        "token": "YOUR_SERVER_TOKEN_HERE"
    },
    "relay": {
        "enabled": true,
        "listen_address": "0.0.0.0",
        "listen_port": 8443,
        "external_url": "wss://relay1.example.com:8443",
        "region": "us-east",
        "tls": {
            "enabled": true,
            "cert_file": "/etc/edgelink/cert.pem",
            "key_file": "/etc/edgelink/key.pem"
        }
    },
    "stun": {
        "enabled": true,
        "listen_address": "0.0.0.0",
        "listen_port": 3478,
        "external_port": 3478,
        "external_ip": "YOUR_PUBLIC_IP_HERE",
        "external_ip2": ""
    },
    "mesh_peers": []
}
